@{
	ViewData["Title"] = "Sales Records"; 
}

<h2>@ViewData["Title"]</h2>

<div class="row">
	<div class="col-md-6">
		<form class="form-select" asp-action="SimpleSearch">
			<fieldset>
				<legend>Simple Search</legend>
				<div class="form-group">
					<label for="minDate" class="col-lg-2 form-label">Min Date</label>
					<input type="date" class="form-control" id="minDate" name="minDate" value="@ViewData["minDate"]" />
				</div>
				<div class="form-group">
					<label for="maxDate">Max Date</label>
					<input type="date" class="form-control" id="maxDate" name="maxDate" value="@ViewData["maxDate"]" />
				</div>
				<br />
				<button type="submit" class="btn btn-primary btn-block">Search</button>
		</form>
	</div>
	<div class="col-md-6">
		<form class="form-select" asp-action="GroupingSearch">
			<fieldset>
				<legend>Grouping Search</legend>
				<div class="form-group">
					<label for="minDate" class="col-lg-2 form-label">Min Date</label>
					<input type="date" class="form-control" id="minDate" name="minDate" value="@ViewData["minDate"]" />
				</div>
				<div class="form-group">
					<label for="maxDate">Max Date</label>
					<input type="date" class="form-control" id="maxDate" name="maxDate" value="@ViewData["maxDate"]" />
				</div>
				<br />
				<button type="submit" class="btn btn-primary btn-block">Search</button>
		</form>
	</div>
</div>